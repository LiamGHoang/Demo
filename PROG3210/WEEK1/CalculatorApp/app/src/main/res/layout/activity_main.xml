<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/teal_200"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="341dp"
        android:layout_height="56dp"
        android:background="@color/white"
        android:text="Calculator App"
        android:textAlignment="center"
        android:textColor="@color/purple_500"
        android:textSize="25dp"


        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.067" />

    <EditText
        android:id="@+id/editTextFirstNumber"
        android:layout_width="325dp"
        android:layout_height="73dp"
        android:layout_marginTop="40dp"
        android:ems="10"

        android:hint="Enter first number"
        android:background="@color/white"
        android:textStyle="bold"
        android:inputType="textPersonName"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.406"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/editTextSecondNumber"
        android:layout_width="325dp"
        android:layout_height="73dp"
        android:layout_marginTop="148dp"
        android:ems="10"

        android:hint="Enter second number"
        android:inputType="textPersonName"
        android:background="@color/white"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/buttonAdd"
        android:onClick="buttonAdd_Click"

        android:layout_width="122dp"
        android:layout_height="84dp"
        android:layout_marginTop="24dp"
        android:text="Add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.148"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextSecondNumber" />

    <Button
        android:id="@+id/buttonSubtract"
        android:onClick="buttonSubtract_Click"

        android:layout_width="122dp"
        android:layout_height="84dp"
        android:layout_marginTop="24dp"
        android:text="Subtract"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.73"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextSecondNumber" />

    <TextView
        android:id="@+id/textViewOutput"
        android:layout_width="262dp"
        android:layout_height="73dp"
        android:layout_marginTop="24dp"

        android:background="@color/white"
        android:hint="Result will be displayed here"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSubtract" />

    <Button
        android:id="@+id/buttonNext"
        android:onClick="buttonNext_Click"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Next Activity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOutput" />

</androidx.constraintlayout.widget.ConstraintLayout>