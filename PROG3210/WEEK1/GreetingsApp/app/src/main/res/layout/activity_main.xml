<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/teal_200"

    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"

        android:layout_width="309dp"
        android:layout_height="46dp"

        android:text="GREETINGS APP"
        android:textAlignment="center"
        android:textColor="@color/purple_500"
        android:textSize="25dp"
        android:textStyle="bold"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.072" />

    <EditText
        android:id="@+id/editTextFirstName"

        android:layout_width="221dp"
        android:layout_height="44dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Type your first name"
        android:inputType="textPersonName"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/editTextLastName"
        android:layout_width="215dp"
        android:layout_height="49dp"
        android:layout_marginTop="40dp"

        android:background="@color/white"
        android:ems="10"
        android:hint="Type your last Name"

        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextFirstName" />

    <Button
        android:id="@+id/buttonHello"

        android:layout_width="107dp"
        android:layout_height="70dp"
        android:layout_marginTop="36dp"

        android:text="Hello"

        android:onClick="buttonHello_Click"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.677"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextLastName" />

    <TextView
        android:id="@+id/textOutput"

        android:layout_width="348dp"
        android:layout_height="108dp"
        android:layout_marginTop="104dp"

        android:hint="Your output will be displayed here"
        android:background="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonHello" />

</androidx.constraintlayout.widget.ConstraintLayout>